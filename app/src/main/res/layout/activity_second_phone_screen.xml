<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:background="@color/whiteColor"
  tools:context=".SecondPhoneScreen">

  <android.support.constraint.Guideline
    android:id="@+id/secondPhoneScreenGuide0"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    app:layout_constraintGuide_percent="0.0"/>

  <android.support.constraint.Guideline
    android:id="@+id/secondPhoneScreenGuide1"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    app:layout_constraintGuide_percent="0.20"/>

  <android.support.constraint.Guideline
    android:id="@+id/secondPhoneScreenGuide2"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    app:layout_constraintGuide_percent="0.30"/>

  <android.support.constraint.Guideline
    android:id="@+id/secondPhoneScreenGuide3"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    app:layout_constraintGuide_percent="0.40"/>

  <android.support.constraint.Guideline
    android:id="@+id/secondPhoneScreenGuide4"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    app:layout_constraintGuide_percent="0.50"/>

  <android.support.constraint.Guideline
    android:id="@+id/secondPhoneScreenGuide5"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    app:layout_constraintGuide_percent="0.60"/>

  <android.support.constraint.Guideline
    android:id="@+id/secondPhoneScreenGuide6"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    app:layout_constraintGuide_percent=".70"/>

  <android.support.constraint.Guideline
    android:id="@+id/secondPhoneScreenGuide7"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    app:layout_constraintGuide_percent=".80"/>

  <android.support.constraint.Guideline
    android:id="@+id/secondPhoneScreenGuide8"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    app:layout_constraintGuide_percent="1.0"/>

  <android.support.constraint.ConstraintLayout
    android:id="@+id/cLayoutPhone"
    android:layout_width="0dp"
    android:layout_height="0dp"
    android:background="@color/phoneIconColor"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintBottom_toTopOf="@+id/secondPhoneScreenGuide1"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="@+id/secondPhoneScreenGuide0">

    <ImageView
      android:id="@+id/imagePhone"
      android:layout_width="0dp"
      android:layout_height="0dp"
      android:layout_marginTop="20dp"
      android:layout_marginBottom="20dp"
      android:layout_marginStart="30dp"
      android:layout_marginEnd="250dp"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintVertical_bias="0.51"
      app:srcCompat="@drawable/black_ic_phone_receiver"/>
    <TextView
      android:id="@+id/textSecondPhoneScreenPhone"
      android:textStyle="bold"
      android:layout_width="0dp"
      android:layout_height="match_parent"
      android:layout_marginTop="10dp"
      android:layout_marginStart="30dp"
      android:layout_marginEnd="30dp"
      android:autoSizeTextType="uniform"
      android:autoSizeMaxTextSize="26sp"
      android:gravity="center"
      android:text="@string/call"
      android:textColor="@android:color/black"
      app:fontFamily="sans-serif-black"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toEndOf="@+id/imagePhone"
      app:layout_constraintTop_toTopOf="parent"/>

  </android.support.constraint.ConstraintLayout>

  <android.support.constraint.ConstraintLayout
    android:id="@+id/cLayoutSecondCall"
    android:layout_width="0dp"
    android:layout_height="0dp"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintBottom_toTopOf="@+id/secondPhoneScreenGuide3"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="@+id/secondPhoneScreenGuide2">

    <android.support.constraint.Guideline
      android:id="@+id/endImage2"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:orientation="vertical"
      app:layout_constraintGuide_percent="0.27"/>
    <android.support.constraint.Guideline
      android:id="@+id/startImgage2"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:orientation="vertical"
      app:layout_constraintGuide_percent="0.04"/>
    <ImageView
      android:id="@+id/imageSecondCall"
      android:layout_width="0dp"
      android:layout_height="0dp"
      android:layout_marginTop="15dp"
      android:layout_marginBottom="5dp"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toStartOf="@+id/endImage2"
      app:layout_constraintStart_toStartOf="@+id/startImgage2"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintVertical_bias="0.51"
      app:srcCompat="@drawable/ic_telephone_symbol_button"/>

    <Button
      android:id="@+id/textSecondCall"
      android:textStyle="bold"
      android:layout_width="0dp"
      android:layout_height="match_parent"
      android:layout_marginTop="10dp"
      android:layout_marginEnd="30dp"
      android:autoSizeMaxTextSize="20sp"
      android:autoSizeTextType="uniform"
      android:gravity="center"
      android:onClick="pressCall"
      android:text="@string/using_whatsapp"
      android:textColor="@android:color/black"
      app:fontFamily="sans-serif-black"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="@+id/endImage2"
      app:layout_constraintTop_toTopOf="parent"/>

  </android.support.constraint.ConstraintLayout>

  <android.support.constraint.ConstraintLayout
    android:id="@+id/cLayoutRegCall"
    android:layout_width="0dp"
    android:layout_height="0dp"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintBottom_toTopOf="@+id/secondPhoneScreenGuide2"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="@+id/secondPhoneScreenGuide1">

    <android.support.constraint.Guideline
      android:id="@+id/endImage"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:orientation="vertical"
      app:layout_constraintGuide_percent="0.27"/>
    <android.support.constraint.Guideline
      android:id="@+id/startImgage"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:orientation="vertical"
      app:layout_constraintGuide_percent="0.04"/>

    <ImageView
      android:id="@+id/imageRegCall"
      android:layout_width="0dp"
      android:layout_height="0dp"
      android:layout_marginTop="15dp"
      android:layout_marginBottom="5dp"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toStartOf="@+id/endImage"
      app:layout_constraintStart_toStartOf="@+id/startImgage"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintVertical_bias="0.51"
      app:srcCompat="@drawable/ic_telephone_symbol_button"/>

    <Button
      android:id="@+id/textRegCall"
      android:textStyle="bold"
      android:layout_width="0dp"
      android:layout_height="match_parent"
      android:layout_marginTop="10dp"
      android:layout_marginEnd="30dp"
      android:autoSizeMaxTextSize="20sp"
      android:autoSizeTextType="uniform"
      android:gravity="center"
      android:onClick="pressCall"
      android:text="@string/using_reg_phone"
      android:textColor="@android:color/black"
      app:fontFamily="sans-serif-black"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="@+id/endImage"
      app:layout_constraintTop_toTopOf="parent"/>

  </android.support.constraint.ConstraintLayout>

  <android.support.constraint.ConstraintLayout
    android:id="@+id/cLayoutThirdCall"
    android:layout_width="0dp"
    android:layout_height="0dp"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintBottom_toTopOf="@+id/secondPhoneScreenGuide4"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="@+id/secondPhoneScreenGuide3">

    <android.support.constraint.Guideline
      android:id="@+id/endImage3"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:orientation="vertical"
      app:layout_constraintGuide_percent="0.27"/>
    <android.support.constraint.Guideline
      android:id="@+id/startImgage3"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:orientation="vertical"
      app:layout_constraintGuide_percent="0.04"/>
    <ImageView
      android:id="@+id/imageThirdCall"
      android:layout_width="0dp"
      android:layout_height="0dp"
      android:layout_marginTop="15dp"
      android:layout_marginBottom="5dp"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toStartOf="@+id/endImage3"
      app:layout_constraintStart_toStartOf="@+id/startImgage3"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintVertical_bias="0.51"
      app:srcCompat="@drawable/ic_telephone_symbol_button"/>

    <Button
      android:id="@+id/textThirdCall"
      android:textStyle="bold"
      android:layout_width="0dp"
      android:layout_height="match_parent"
      android:layout_marginTop="10dp"
      android:layout_marginEnd="30dp"
      android:autoSizeMaxTextSize="20sp"
      android:autoSizeTextType="uniform"
      android:gravity="center"
      android:onClick="pressCall"
      android:text="@string/using_viber"
      android:textColor="@android:color/black"
      app:fontFamily="sans-serif-black"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="@+id/endImage3"
      app:layout_constraintTop_toTopOf="parent"/>

  </android.support.constraint.ConstraintLayout>

  <android.support.constraint.ConstraintLayout
    android:id="@+id/cLayoutMessenger"
    android:layout_width="0dp"
    android:layout_height="0dp"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintBottom_toTopOf="@+id/secondPhoneScreenGuide5"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="@+id/secondPhoneScreenGuide4">

    <ImageView
      android:id="@+id/imageMessenger"
      android:layout_width="0dp"
      android:layout_height="0dp"
      android:layout_marginTop="10dp"
      android:layout_marginBottom="10dp"
      android:layout_marginStart="10dp"
      android:layout_marginEnd="300dp"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintVertical_bias="0.51"
      app:srcCompat="@drawable/ic_telephone_symbol_button"/>

    <Button
      android:id="@+id/textFourthCall"
      android:textStyle="bold"
      android:layout_width="0dp"
      android:layout_height="65dp"
      android:layout_marginTop="10dp"
      android:layout_marginBottom="10dp"
      android:layout_marginStart="8dp"
      android:layout_marginEnd="8dp"
      android:onClick="pressCall"
      android:text="@string/using_messenger"
      android:textAlignment="viewStart"
      android:textColor="@android:color/black"
      android:textSize="20sp"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toEndOf="@+id/imageMessenger"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintVertical_bias="0.49"/>

  </android.support.constraint.ConstraintLayout>

  <android.support.constraint.ConstraintLayout
    android:id="@+id/cLayoutSkype"
    android:layout_width="0dp"
    android:layout_height="0dp"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintBottom_toTopOf="@+id/secondPhoneScreenGuide6"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="@+id/secondPhoneScreenGuide5">

    <ImageView
      android:id="@+id/iamgeSkype"
      android:layout_width="0dp"
      android:layout_height="0dp"
      android:layout_marginTop="10dp"
      android:layout_marginBottom="10dp"
      android:layout_marginStart="10dp"
      android:layout_marginEnd="300dp"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintVertical_bias="0.51"
      app:srcCompat="@drawable/ic_telephone_symbol_button"/>

    <Button
      android:id="@+id/textFifthCall"
      android:textStyle="bold"
      android:layout_width="0dp"
      android:layout_height="65dp"
      android:layout_marginTop="10dp"
      android:layout_marginBottom="10dp"
      android:layout_marginStart="8dp"
      android:layout_marginEnd="8dp"
      android:onClick="pressCall"
      android:text="@string/using_skype"
      android:textAlignment="viewStart"
      android:textColor="@android:color/black"
      android:textSize="20sp"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toEndOf="@+id/iamgeSkype"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintVertical_bias="0.49"/>

  </android.support.constraint.ConstraintLayout>

  <android.support.constraint.ConstraintLayout
    android:id="@+id/cLayoutSecondPhoneScreenWhiteBlock"
    android:layout_width="0dp"
    android:layout_height="0dp"
    android:background="@color/whiteColor"
    android:onClick="doNothing"
    app:layout_constraintBottom_toTopOf="@+id/secondPhoneScreenGuide7"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="@+id/secondPhoneScreenGuide8">

  </android.support.constraint.ConstraintLayout>


</android.support.constraint.ConstraintLayout>
