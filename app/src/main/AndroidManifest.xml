<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.launcher.ava.elderlylauncher">

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_rocket"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:clearTaskOnLaunch="true"
            android:launchMode="singleTask"
            android:screenOrientation="portrait"
            >


            <!-- Above two lines ensure every HOME press gets you to main screen -->

            <intent-filter>

                <!-- Map launcher to home button (two lines below) -->
                <category android:name="android.intent.category.HOME" />
                <category android:name="android.intent.category.DEFAULT" />

                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".RecyclerList"
            android:screenOrientation="portrait"
            />
        <activity android:name=".AppDrawer"
            android:screenOrientation="portrait"
            />
        <!--<activity android:name="com.launcher.ava.helperApp.MainAppActivity"></activity>-->

        <activity android:name="com.launcher.ava.helperApp.MainAppActivity"
            android:label="MainAppActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

    </application>

</manifest>