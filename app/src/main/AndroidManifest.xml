<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.launcher.ava.elderlylauncher">

    <uses-permission android:name="android.permission.CALL_PHONE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.VIBRATE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="com.android.alarm.permission.SET_ALARM" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".FirstScreenCommonTools"
          android:screenOrientation="portrait"></activity>
        <activity android:name=".SecondPhoneScreen"
          android:screenOrientation="portrait"></activity>
        <activity android:name=".FirstPhoneScreen"
          android:screenOrientation="portrait"></activity>
        <!--
                 this activity enables the search dialog to initiate searches
                    in the SearchableActivity
        -->
        <activity android:name="com.launcher.ava.helperApp.AppScreen"
          android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.SEARCH" />
            </intent-filter>

            <meta-data
                android:name="android.app.searchable"
                android:resource="@xml/searchable" />
        </activity>
        <activity
            android:name=".MainActivity"
            android:clearTaskOnLaunch="true"
            android:launchMode="singleTask"
            android:screenOrientation="portrait">

            <!-- Above two lines ensure every HOME press gets you to main screen -->

            <intent-filter>

                <!-- Map launcher to home button (two lines below) -->
                <category android:name="android.intent.category.HOME" />
                <category android:name="android.intent.category.DEFAULT" />

                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.launcher.ava.utilities.RecyclerList"
            android:screenOrientation="portrait" />
        <activity
            android:name=".AppDrawer"
            android:screenOrientation="portrait" /> <!-- <activity android:name="com.launcher.ava.helperApp.MainAppActivity"></activity> -->
        <activity
            android:name="com.launcher.ava.helperApp.MainAppActivity"
            android:label="MainAppActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.launcher.ava.frequentlyUsedAppsScreen.FrequentlyUsedAppsActivity" /> <!-- this is the searchable activity; it performs searches -->
        <activity
            android:name="com.launcher.ava.helperApp.SearchableActivity"
            android:launchMode="singleTop">
            <intent-filter>
                <action android:name="android.intent.action.SEARCH" />
            </intent-filter>

            <meta-data
                android:name="android.app.searchable"
                android:resource="@xml/searchable" />
        </activity>
    </application>

</manifest>